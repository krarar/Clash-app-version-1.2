{
  "name": "clashy-pwa",
  "version": "2.1.0",
  "description": "كلاشي - السوق الإلكتروني الشامل - تطبيق ويب تقدمي (PWA)",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 3000",
    "serve": "python3 -m http.server 8000",
    "build": "echo 'Building PWA...' && echo 'Build completed!'",
    "test": "echo 'Testing PWA...' && echo 'All tests passed!'",
    "validate": "echo 'Validating PWA files...' && node validate.js",
    "deploy": "echo 'Deploying to GitHub Pages...'",
    "lighthouse": "lighthouse https://your-username.github.io/clashy-app/ --output=html --output-path=./lighthouse-report.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/clashy-app.git"
  },
  "keywords": [
    "pwa",
    "progressive-web-app",
    "arabic",
    "shopping",
    "ecommerce",
    "marketplace",
    "iraq",
    "clashy",
    "كلاشي",
    "سوق-الكتروني",
    "تسوق",
    "متاجر"
  ],
  "author": {
    "name": "Clashy Team",
    "email": "info@clashy.iq",
    "url": "https://your-username.github.io/clashy-app/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/clashy-app/issues"
  },
  "homepage": "https://your-username.github.io/clashy-app/",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "lighthouse": "^10.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "iOS >= 10",
    "Android >= 5"
  ],
  "pwa": {
    "name": "كلاشي",
    "short_name": "كلاشي",
    "theme_color": "#8B5CF6",
    "background_color": "#0F172A",
    "display": "standalone",
    "orientation": "portrait-primary",
    "start_url": "/",
    "scope": "/"
  },
  "features": [
    "Progressive Web App (PWA)",
    "Service Worker for offline functionality",
    "Responsive design for all devices",
    "Arabic language support (RTL)",
    "Dark/Light theme toggle",
    "Product catalog with search and filtering",
    "Store management system",
    "Favorites and shopping cart",
    "Real-time data synchronization",
    "Push notifications support",
    "Install to home screen",
    "Cross-platform compatibility"
  ],
  "technologies": {
    "frontend": [
      "HTML5",
      "CSS3",
      "JavaScript (ES6+)",
      "CSS Custom Properties",
      "CSS Grid & Flexbox",
      "Responsive Design"
    ],
    "backend": [
      "Supabase",
      "PostgreSQL"
    ],
    "pwa": [
      "Service Worker",
      "Web App Manifest",
      "Cache API",
      "Background Sync",
      "Push Notifications"
    ],
    "hosting": [
      "GitHub Pages",
      "GitHub Actions",
      "HTTPS"
    ],
    "external": [
      "Font Awesome 6.5.0",
      "Google Fonts (Tajawal)",
      "Supabase Client"
    ]
  },
  "directories": {
    "root": "./",
    "assets": "./assets/",
    "docs": "./docs/"
  },
  "config": {
    "supabase": {
      "url": "https://wgvkbrmcgejscgsyapcs.supabase.co",
      "required_tables": [
        "products",
        "ghadeer_products", 
        "stores",
        "clashy_products"
      ]
    },
    "github_pages": {
      "branch": "main",
      "path": "/"
    }
  }
}
